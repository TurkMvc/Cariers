@model MyCarier.Models.Education

@{
    ViewBag.Title = "Details";
    ViewBag.Header = "Detail Education";
    ViewBag.HeaderIcon = "graduation-cap";
    ViewBag.NavEducation = "w3-blue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="w3-container w3-padding-16">
    <div class="col-md-12">
        <h4>Education</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.SchoolName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SchoolName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartYear)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartYear)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EndYear)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndYear)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsCurrent)
            </dt>

            <dd>
                @if (Model.IsCurrent)
            {
                    <span class="glyphicon glyphicon-ok text-success"></span>
                }
                else
                {
                    <span class="glyphicon glyphicon-remove text-danger"></span>
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.Raw(Model.Description)
            </dd>

        </dl>

    </div>
    <div class="col-md-12">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>
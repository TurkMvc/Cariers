@model MyCarier.Models.Ability

@{
    ViewBag.Title = "Details";
    ViewBag.Header = "Skill Details";
    ViewBag.HeaderIcon = "grav";
    ViewBag.NavSkills = "w3-blue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="w3-container w3-padding-16">
    <div class="col-md-6">
        <h4>Details of your skill</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Scale)
            </dt>

            <dd>
                @MyHelperMethods.AddLanguageString(Model.Scale)
            </dd>

        </dl>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>
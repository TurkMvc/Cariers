@model IEnumerable<MyCarier.Models.Social>

@{
    ViewBag.Title = "Index";
    ViewBag.Header = "Social Urls";
    ViewBag.HeaderIcon = "share-alt";
    ViewBag.NavSocials = "w3-blue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="w3-container w3-padding-16">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IconName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
        <tr>
            <td>
                @MyHelperMethods.GetSocialIconName(item.IconName)
            </td>
            <td>
                <a href="@item.Url" target="_blank">@item.Url</a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },
                        new { @class = "btn btn-warning btn-sm" })

                @Html.ActionLink("Details", "Details", new { id = item.Id },
                        new { @class = "btn btn-info btn-sm" })

                @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                        new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
        }

        </table>
    </div>
</div>